@page "/tipos-categoria"

@attribute [Authorize(Policy = "EmpresaUser")]

@using Gestao_Loja.Data
@using Gestao_Loja.Entities
@using Microsoft.EntityFrameworkCore

@inject ApplicationDbContext Db

<h3>Gestão de Tipos de Categoria</h3>

@if (isLoading)
{
    <p>A carregar...</p>
}
else
{
    <div class="row">
        <div class="col-md-7">
            <h4>Lista de Tipos</h4>

            @if (tipos == null || !tipos.Any())
            {
                <p>Sem tipos de categoria registados.</p>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tipo in tipos)
                        {
                            <tr>
                                <td>@tipo.TipoCategoriaId</td>
                                <td>@tipo.Nome</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <div class="col-md-5">
            <h4>Novo Tipo de Categoria</h4>

            <EditForm Model="novoTipo" OnValidSubmit="CriarTipoAsync">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <InputText class="form-control" @bind-Value="novoTipo.Nome" />
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </EditForm>
        </div>
    </div>
}

@code {
    private List<TipoCategoria> tipos = new();
    private TipoCategoria novoTipo = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CarregarTiposAsync();
    }

    private async Task CarregarTiposAsync()
    {
        isLoading = true;

        tipos = await Db.TipoCategorias
            .OrderBy(t => t.Nome)
            .ToListAsync();

        isLoading = false;
    }

    private async Task CriarTipoAsync()
    {
        if (string.IsNullOrWhiteSpace(novoTipo.Nome))
            return;

        Db.TipoCategorias.Add(novoTipo);
        await Db.SaveChangesAsync();

        novoTipo = new TipoCategoria();
        await CarregarTiposAsync();
    }
}
