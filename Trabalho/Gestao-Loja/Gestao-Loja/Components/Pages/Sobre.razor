@page "/sobre"
@using Gestao_Loja.Config

<div class="container py-4">
    <div class="d-flex align-items-center gap-2 mb-3">
        <i class="bi bi-info-circle fs-3"></i>
        <div>
            <h2 class="mb-0">Sobre</h2>
            <div class="text-muted">Informações da aplicação</div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h4 class="card-title mb-4">@AppConfig.tituloHomePage</h4>

            <div class="list-group list-group-flush">
                <div class="list-group-item d-flex align-items-start gap-3 py-3">
                    <i class="bi bi-geo-alt fs-4"></i>
                    <div>
                        <div class="fw-semibold">Endereço</div>
                        <div class="text-muted">@AppConfig.enderecoHome</div>
                    </div>
                </div>

                <div class="list-group-item d-flex align-items-start gap-3 py-3">
                    <i class="bi bi-envelope fs-4"></i>
                    <div>
                        <div class="fw-semibold">Email</div>
                        <a class="text-decoration-none" href="mailto:@AppConfig.mail">@AppConfig.mail</a>
                    </div>
                </div>

                <div class="list-group-item d-flex align-items-start gap-3 py-3">
                    <i class="bi bi-person fs-4"></i>
                    <div class="w-100">
                        <div class="fw-semibold">Autores</div>

                        <div class="d-flex flex-column gap-1 mt-2">
                            <span class="text-muted">@AppConfig.Autor1</span>
                            <span class="text-muted">@AppConfig.Autor2</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <a class="btn btn-outline-primary"
                   href="mailto:@AppConfig.mail">
                    <i class="bi bi-send me-2"></i>
                    Contactar
                </a>

                <a class="btn btn-outline-secondary" href="/">
                    <i class="bi bi-house-door me-2"></i>
                    Voltar ao Home
                </a>
            </div>
        </div>
    </div>
</div>
